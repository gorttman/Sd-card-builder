#cloud-config
hostname: {{ hostname }}
manage_etc_hosts: true
users:
  - name: pi
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    shell: /bin/bash
    lock_passwd: false
    plain_text_passwd: 'raspberry'
ssh_pwauth: true
runcmd:
  - [ cloud-init-per, once, boot-done, echo, "Boot complete" ]
